class Solution {
    public boolean isAnagram(String s, String t) {
        int[] arr = new int[26];
        int m = s.length(), n = t.length();
        if(m != n)
            return false;
        for(int i=0;i<m;i++)
            arr[s.charAt(i) - 'a']++;
        for(int i=0;i<n;i++)
            arr[t.charAt(i) - 'a']--;
        for(int i=0;i<26;i++)
            if(arr[i] != 0)
                return false;
        return true;
    }
}
