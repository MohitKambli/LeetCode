class Solution {
    public boolean satisfiesConditions(int[][] grid) {
        int m = grid.length, n = grid[0].length;
        for(int i=0;i<m;i++) {
            for(int j=0;j<n;j++) {
                if((i+1 < m && grid[i][j] != grid[i+1][j]) || (j+1 < n && grid[i][j] == grid[i][j+1]))
                    return false;
            }
        }
        return true;
    }
}
