# Write your MySQL query statement below
select
    name as results
from (
    select
        u.name,
        count(mr.rating) as max_rate
    from users u
    join movierating mr
    on u.user_id = mr.user_id
    group by u.name
    order by max_rate desc, u.name asc
    limit 1
) as temp1
union all
select
    title as results
from (
    select
        m.title,
        avg(mr.rating) as max_avg_rating
    from movies m
    join movierating mr
    on m.movie_id = mr.movie_id
    where month(mr.created_at) = 2 and year(mr.created_at) = 2020
    group by m.title
    order by max_avg_rating desc, m.title asc
    limit 1
) as temp2;
