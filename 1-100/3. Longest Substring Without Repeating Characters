class Solution {
    public int lengthOfLongestSubstring(String s) {
        int n = s.length(), j = 0, ans = 0;
        Set<Character> set = new HashSet<>();
        for(int i=0;i<n;i++)     {
            char ch = s.charAt(i);
            if(!set.contains(ch)) {
                ans = Math.max(ans, i - j + 1);
            } else {
                while(set.contains(ch))
                    set.remove(s.charAt(j++));
            }
            set.add(ch);
        }
        return ans;
    }
}
