class Solution {
    public int mySqrt(int x) {
        if(x == 0 || x == 1)
            return x;
        int left = 0, right = x, ans = -1;
        while(left <= right) {
            int mid = left + ((right-left) / 2);
            if((long)mid * (long)mid > (long)x)
                right = mid - 1;
            else if(mid * mid < x) {
                left = mid + 1;
                ans = mid;
            } else {
                return mid;
            }
        }
        return ans;
    }
}



class Solution(object):
    def mySqrt(self, x):
        """
        :type x: int
        :rtype: int
        """
        left, right, ans = 0, x, -1
        while left <= right:
            mid = left + (right - left) // 2
            if mid * mid > x:
                right = mid - 1
            elif mid * mid < x:
                left = mid + 1
                ans = mid
            else:
                return mid
        return ans
