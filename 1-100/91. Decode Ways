class Solution {
    public int helper(int index, int n, String s, int[] dp) {
        if(index == n)
            return 1;
        if(s.charAt(index) == '0')
            return 0;
        if(dp[index] != -1)
            return dp[index];

        int notTake = helper(index+1, n, s, dp);
        int take = 0;
        if(index+1 < n) {
            if(
                s.charAt(index) == '1' ||
                (
                    s.charAt(index) == '2' &&
                    s.charAt(index+1) >= '0' &&
                    s.charAt(index+1) <= '6'
                )
            )
                take = helper(index+2, n, s, dp);
        }
        return dp[index] = take + notTake;
    }
    public int numDecodings(String s) {
        int n = s.length();
        int[] dp = new int[n];
        Arrays.fill(dp, -1);
        return helper(0, n, s, dp);
    }
}
