class Solution {
    public double helper(double x, int n) {
        if(n == 0)
            return 1;

        return n % 2 == 0 ? helper(x * x, n / 2) : x * helper(x * x, n / 2);
    }
    public double myPow(double x, int n) {
        if(n < 0) {
            n = -n;
            x = 1 / x;
        }
        return helper(x, n);
    }
}




class Solution {
    public double helper(double x, int n) {
        if(n == 0)
            return 1;
        return n % 2 == 0 ? helper(x * x, n / 2) : x * helper(x * x, n / 2);
    }
    public double myPow(double x, int n) {
        if(n < 0) {
            n = -n;
            x = 1 / x;
        }
        return helper(x, n);
    }
}
