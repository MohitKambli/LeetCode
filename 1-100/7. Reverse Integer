class Solution {
    public int reverse(int x) {
        boolean isNegative = false;
        if(x < 0) {
            isNegative = true;
            x *= -1;
        }
        long ans = 0;
        while(x > 0) {
            int d = x % 10;
            ans = ans * 10 + d;
            x /= 10;
        }
        if(ans > Integer.MAX_VALUE || ans < Integer.MIN_VALUE)
            return 0;
        return isNegative ? -(int)ans : (int)ans;
    }
}
