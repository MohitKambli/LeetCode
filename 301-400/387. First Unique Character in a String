class Solution {
    public int firstUniqChar(String s) {
        int n = s.length();
        int[] arr = new int[26];
        for(int i=0;i<n;i++)
            arr[s.charAt(i) - 'a']++;
        for(int i=0;i<n;i++)
            if(arr[s.charAt(i) - 'a'] == 1)
                return i;
        return -1;
    }
}


class Solution(object):
    def firstUniqChar(self, s):
        """
        :type s: str
        :rtype: int
        """
        arr = [0 for i in range(26)]
        n = len(s)
        for i in range(n):
            arr[ord(s[i]) - ord('a')] += 1
        for i in range(n):
            if arr[ord(s[i]) - ord('a')] == 1:
                return i
        return -1
