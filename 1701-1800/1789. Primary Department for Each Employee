# Write your MySQL query statement below
select
    employee_id,
    department_id
from employee
where primary_flag = 'Y' or (employee_id, primary_flag) in (
    select employee_id, primary_flag
    from employee
    group by employee_id
    having count(primary_flag) = 1
);


