class Solution {
    public boolean check(int[] nums) {
        int n = nums.length, count = 0;
        for(int i=0;i<n;i++)
            if(nums[i] > nums[(i+1) % n])
                count++;
        return count > 1 ? false : true;
    }
}


class Solution(object):
    def check(self, nums):
        """
        :type nums: List[int]
        :rtype: bool
        """
        n, count = len(nums), 0
        for i in range(n):
            if nums[i] > nums[(i+1) % n]:
                count += 1
        return False if count > 1 else True
